<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAllAlbums">


    <RelativeLayout
    android:id="@+id/network_error_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:visibility="gone">

    <ImageView
        android:id="@+id/error_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/no_internet_connection"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Error"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/error_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/loading_indicator"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/colorful_circle"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    <Button
        android:id="@+id/backToPreviousScreen"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_back_to_previous_black"/>

    <TextView
        android:id="@+id/allAlbumsHeading"
        android:layout_toRightOf="@id/backToPreviousScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Albums"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <GridView
        android:id="@+id/allAlbumsGridView"
        android:layout_below="@id/allAlbumsHeading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:numColumns="2"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="20dp"/>

    </RelativeLayout>
</RelativeLayout>